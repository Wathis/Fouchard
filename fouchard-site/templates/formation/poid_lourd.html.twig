            <div class="space-10"></div>
            <table>
                <tbody>
                <tr>
                    <td>Frais de dossier</td>
                </tr>
                <tr>
                    <td>Frais d'accompagnement plateau-conduite</td>
                </tr>
                <tr>
                    <td>15 heures formation plateau-route</td>
                </tr>
                <tr class="no_underline">
                    <td class="lato_bold">Forfait</td>
                    <td class="right-align lato_bold">670,00 €</td>
                </tr>
                </tbody>
            </table>


