<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="initial-scale=1.0, user-scalable=no">
        {#<!-- Compiled and minified CSS -->#}
        <link rel="stylesheet" href="{{ asset('css/index.css') }}">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
        <!-- Compiled and minified JavaScript -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
        <title>{% block title %}École de conduite S.Fouchard{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        {% block nav %}
            <nav>
                <div class="nav-wrapper">
                    {% set url_page = app.request.uri %}
                    <a href="{{ path('index') }}" class="brand-logo title_nav">ÉCOLE DE CONDUITE S.FOUCHARD</a>
                    <ul id="nav-mobile" class="right hide-on-med-and-down">
                        <li><a class="item_nav" href="{{ path('index') }}"><span class="{{ 'accueil' in url_page ? 'active' }}">ACCUEIL</span></a></li>
                        <li><a class="item_nav" href="{{ path('formation') }}"><span class="{{ 'formation' in url_page ? 'active' }}">FORMATION</span></a></li>
                        <li><a class="item_nav" href="{{ path('materiel') }}"><span class="{{ 'materiel' in url_page ? 'active' }}">MATERIEL</span></a></li>
                        <li><a class="item_nav" href="{{ path('contact') }}"><span class="{{ 'contact' in url_page ? 'active' }}">CONTACT</span></a></li>
                    </ul>
                </div>
            </nav>
        {% endblock %}
        {% block body %}{% endblock %}

        <footer>
            <div class="container">
                <div class="row">
                    <div class="col m4 s12">
                        <div class="lato_bold center">Code (1h)</div>
                        <div class="space-10"> </div>
                        <div>Mardi : 18h15</div>
                        <div>Mercredi : 14h00 et 15h00</div>
                        <div>Jeudi : 18h15</div>
                        <div>Vendredi : 18h15</div>
                        <div>Samedi : 10h00 et 11h00</div>
                    </div>

                    <div class="col m4 s12 footer-middle">
                        <div class="lato_bold center">Horaires d'ouverture</div>
                        <div class="space-10"> </div>
                        <div>
                            Du lundi au vendredi de 8h à 19h<br/>
                            Le samedi de 8h à 15h
                        </div>
                    </div>

                    <div class="col m4 s12">
                        <div class="lato_bold center">Coordonnées</div>
                        <div class="space-10"> </div>
                        <div>
                            244 Avenue de Paris,  50000 Saint-Lô, France<br/>
                            02 33 57 12 89<br/>
                            06 08 31 36 75<br/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="center">
                © Copyrights École de conduite S. Fouchard - 1963
            </div>
        </footer>

        {% block javascripts %}{% endblock %}
    </body>
</html>
